export LESSHISTFILE=-
export ZDOTDIR=~/.config/zsh
typeset -U path
path=(~/.local/bin $path)

if (( $+commands[bat] )); then
    export BAT_PAGER='less -FR --mouse'
    export BAT_THEME=base16
fi

if (( $+commands[tmux] )); then
    path=(~/.tmux/plugins/tmux-mem-cpu-load $path)
fi

if [[ -d ~/.cargo/bin ]]; then
    path=(~/.cargo/bin $path)
fi
