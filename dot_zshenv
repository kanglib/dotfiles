export LESSHISTFILE=-
export ZDOTDIR=~/.config/zsh

typeset -U path
path[1,0]=~/.local/bin

if (( $+commands[bat] )); then
    export BAT_PAGER='less -FR --mouse'
    export BAT_THEME=base16
fi

if (( $+commands[tmux] )); then
    path[1,0]=~/.tmux/plugins/tmux-mem-cpu-load
fi

if [[ -d ~/.cargo/bin ]]; then
    path[1,0]=~/.cargo/bin
fi
